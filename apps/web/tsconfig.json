{
    "extends": "@chess-platform/tsconfig/base.json",
    "compilerOptions": {
        "target": "ES2020",
        "useDefineForClassFields": true,
        "lib": [
            "ES2020",
            "DOM",
            "DOM.Iterable"
        ],
        "module": "ESNext",
        "skipLibCheck": true,
        "moduleResolution": "node",
        "allowImportingTsExtensions": false,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "jsx": "react-jsx",
        "composite": true,
        "allowSyntheticDefaultImports": true,
        "types": [
            "vite/client"
        ]
    },
    "include": [
        "src"
    ]
}